<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/ui_size_8"
    tools:showIn="@layout/view_panel_more">

    <com.xiaoyv.common.widget.image.AnimeImageView
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_0"
        android:background="@drawable/selector_format_menu_round"
        android:clickable="true"
        android:cropToPadding="false"
        android:focusable="true"
        app:contentPadding="@dimen/ui_layout_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_format_bold"
        app:tint="?attr/colorControlNormal" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/layout_timeline"
        layout="@layout/fragment_timeline_page_text" />

    <View
        android:id="@+id/v_divider"
        style="@style/Theme.Bangumi.Divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_8"
        app:layout_constraintTop_toBottomOf="@+id/layout_timeline" />

    <com.xiaoyv.common.widget.menu.AnimeSectionView
        android:id="@+id/section_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/v_divider" />
</androidx.constraintlayout.widget.ConstraintLayout>
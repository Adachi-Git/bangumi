<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_theme_c1"
    android:layout_gravity="end|bottom">

    <com.xiaoyv.common.widget.text.AnimeTextView
        android:id="@+id/tv_speech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_size_6"
        android:textSize="@dimen/text_label"
        app:layout_constraintBottom_toBottomOf="@+id/robot_view"
        app:layout_constraintEnd_toStartOf="@+id/robot_view"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/robot_view"
        app:layout_constraintVertical_bias="0"
        tools:ignore="SmallSp"
        tools:text="@tools:sample/lorem" />

    <com.xiaoyv.common.widget.musume.LAppMusumeView
        android:id="@+id/robot_view"
        android:layout_width="@dimen/ui_size_120"
        android:layout_height="@dimen/ui_size_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>